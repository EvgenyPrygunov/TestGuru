<h3><%= question_header(@question) %></h3>

<%= form_with model: [:admin, @test, @question], local: true do |form| %>
  <%= render 'shared/errors', resource: @question %>

  <p>
    <%= form.label :body %><br>
    <%= form.text_field :body, id: :question_body %>
  </p><br>

  <%= form.submit %>
<% end %>

<%= link_to t('back'), admin_test_path(@question.test) %>
